{% extends "base.twig" %}

{% block title %}Reset password
{% endblock %}

{% block footer %}

	<script src="/js/hideShowPassword.js"></script>
	<script src="/js/app.js"></script>

	<script>
		$(document).ready(function () {

			$('#formPassword').validate({
				rules: {
					password: {
						required: true,
						minlength: 6,
						validPassword: true
					}
				},
				messages: {
					password: {
						required: "Password is required",
						minlength: 'Must contain at least 6 characters',
						validPassword: 'Must contain at least one letter and one number'
					}
				}
			});
		});
	</script>

{% endblock %}

{% block body %}
	<main>
		<div class="container p-3 h5 mx-auto">
			<form method="post" id="formPassword" action="/password/reset-password" class="bg-white rounded-lg opacity-75 shadow-lg p-3 mx-auto col-10 col-sm-9 col-md-7 col-lg-6 col-xl-5 col-xxl-4">
				<input type="hidden" name="token" value="{{ token }}"/>
				<h2 class="p-1 m-1 text-center">Enter a new password</h2>
				<div class="form-group mx-auto">
					<input type="password" class="form-control font-weight-bold text-dark border-4 error" id="password" name="password" required>
				</div>
				<div class="form-group">
					<label class="font-weight-normal text-black h5">Show me the Password!</label>
					<i>
						<span class="bi bi-eye-slash" id="togglePassword"></span>
					</i>
				</div>
				<button type="submit" class="greenButton my-3 p-1 d-block text-white btn btn-block mx-auto">Reset password
				</button>
				<a href="/home/index" class="text-decoration-none blackButton my-1 p-1 d-block text-white btn btn-block mx-auto">Back to Login Page</a>
			</form>
		</div>
	</main>
{% endblock %}
